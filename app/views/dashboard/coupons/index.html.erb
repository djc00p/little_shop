<h1>Coupon List</h1>
<% if @coupons.count < 5 %>
  <%= link_to "Add Coupon", new_dashboard_coupon_path %>
<% end %>
<% @coupons.each do |coupon| %>
  <div class="card float-left m-3 order-item-card">
    <div class="card-body" id="coupon<%= coupon.id %>">
      <h5 class="card-title"><%= link_to coupon.name, dashboard_coupon_path(coupon) %></h5>
      <li><%= coupon.dollars_off %> Dollars Off</li>
      <% if coupon.active? %>
        <%= button_to "Disable Coupon", dashboard_disable_coupon_path(coupon), method: :patch %>
      <% else %>
        <%= button_to "Enable Coupon", dashboard_enable_coupon_path(coupon), method: :patch %>
      <% end %>
      <%= button_to "Delete Coupon", dashboard_coupon_path(coupon), method: :delete %>
      <%= link_to "Edit", edit_dashboard_coupon_path(coupon) %>
    </div>
  </div>
<% end %>
